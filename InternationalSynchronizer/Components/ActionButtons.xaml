<UserControl x:Class="InternationalSynchronizer.Components.ActionButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
        <StackPanel x:Name="Buttons"  Orientation="Horizontal" Margin="5" Height="32" HorizontalAlignment="Center">
            <Button Name="AutoSyncButton" Content="Synchronizovať s AI" Width="125" Background="Blue" Click="AutoSyncButton_Click"/>
            <Button Name="ConfirmButton" Content="Potvrdiť" Width="100" Background="Lime" Click="ConfirmButton_Click" IsEnabled="False"/>
            <Button Name="ManualSyncButton" Content="Zapnúť ručnú synchronizáciu" Width="175" Background="Yellow" Click="ManualSyncButton_Click"/>
            <Button Name="DeleteSyncButton" Content="Odstrániť synchronizáciu" Width="150" Background="Red" Click="DeleteSyncButton_Click"/>
            <Button Name="ChooseNewDatabasesButton" Content="Vybrať nové databázy" Width="125" Background="Magenta" Click="ChooseNewDatabasesButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
