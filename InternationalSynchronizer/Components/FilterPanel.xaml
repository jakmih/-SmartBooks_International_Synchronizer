<UserControl x:Class="InternationalSynchronizer.Components.FilterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
        <StackPanel Margin="5" Height="32" Orientation="Horizontal">
            <Button Name="BackButton" Content="Späť" Width="75" Click="BackButton_Click" IsEnabled="False"/>
            <TextBlock Text="Predmet:" Margin="5" VerticalAlignment="Center"/>
            <ComboBox x:Name="SubjectComboBox" Width="Auto" Margin="5" SelectionChanged="ComboBox_SelectionChanged"/>
            <TextBlock Text="Balíček:" Margin="5" VerticalAlignment="Center"/>
            <ComboBox x:Name="PackageComboBox" Width="Auto" Margin="5" SelectionChanged="ComboBox_SelectionChanged" IsEnabled="False"/>
            <TextBlock Text="Téma:" Margin="5" VerticalAlignment="Center"/>
            <ComboBox x:Name="ThemeComboBox" Width="Auto" Margin="5" SelectionChanged="ComboBox_SelectionChanged" IsEnabled="False"/>
            <TextBlock Text="Úloha:" Margin="5" VerticalAlignment="Center"/>
            <ComboBox x:Name="KnowledgeComboBox" Width="Auto" Margin="5" SelectionChanged="ComboBox_SelectionChanged" IsEnabled="False"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
