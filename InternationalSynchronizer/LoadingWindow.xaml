<Window x:Class="InternationalSynchronizer.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternationalSynchronizer"
        mc:Ignorable="d"
        Title="Načitava sa" Height="350" Width="600" WindowStartupLocation="CenterScreen" WindowStyle="None" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="LoadingTextBlock" Text="Načitava sa, prosím čakajte..." FontSize="19" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="10"/>
            <ProgressBar IsIndeterminate="True" Width="300" Height="20" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
